{
    "manifest_version": 3,
    "name": "AI Chatter/Sales",
    "version": "1.0",
    "description": "Increase your business revenue by implementing AI in chats to handle all traffic, maximizing profit and reducing human involvement.",
    "permissions": [
      "cookies",
      "tabs",
      "webRequest",
      "scripting",
      "activeTab",
      "storage"
    ],
    "icons": {
      "128": "icon-128.png"
    },
    "web_accessible_resources": [
      {
        "matches": [
          "<all_urls>"
        ],
        "resources": [
          "src/getVueData/getVueData.js"
        ]
      }
    ],
    "action": {
      "default_popup": "src/extension/extension.html",
      "default_icon": "icon-128.png"
    },
    "options_page": "src/extension/options.html",
    "content_scripts": [
      {
        "matches": ["https://www.instagram.com/*"],
        "js": ["src/background/content.js"]
      }
    ],
    "host_permissions": [
      "https://www.instagram.com/*"
    ],
    "background": {
      "service_worker": "src/background/background.js",
      "type": "module"
    }
  }